# p3 : path to debug the TPR and CPR reconstruction paths separately
#------------------------------------------------------------------------------
BEGIN_PROLOG
  bgHitFiles   : @nil
  INPUT_MODULE : EmptyEvent
  TRIGGER_PATH : p1
  PROCESS_NAME : EMinusGunStnmaker
END_PROLOG

#include "Stntuple/test/stnmaker.fcl"
source : {module_type : EmptyEvent}
